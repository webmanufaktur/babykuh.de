---
import { Picture } from "astro:assets";
import myImage from "../assets/babykuh-logo.png";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>BABY KUH | babykuh.de</title>
    <meta name="description" content="BABYKUH.DE - einfach noch eine Domain." />

    <meta property="og:url" content="https://babykuh.de/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="BABY KUH | babykuh.de" />
    <meta
      property="og:description"
      content="BABYKUH.DE - einfach noch eine Domain."
    />
    <meta property="og:image" content="/babykuh-ogimage.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="babykuh.de" />
    <meta property="twitter:url" content="https://babykuh.de/" />
    <meta name="twitter:title" content="BABY KUH | babykuh.de" />
    <meta
      name="twitter:description"
      content="BABYKUH.DE - einfach noch eine Domain."
    />
    <meta name="twitter:image" content="/babykuh-ogimage.png" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="min-h-[100vh] min-h-[100svh] flex justify-center items-center">
    <div class="block h-auto max-w-[400px]">
      <Picture
        src={myImage}
        formats={["avif", "webp"]}
        widths={[600]}
        height="400"
        width="400"
        alt="[Logo] BABY KUH | babykuh.de"
      />
    </div>
  </body>
</html>
